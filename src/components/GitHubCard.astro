---
import githubData from '@/data/github.json';
const { profile } = githubData;
---
<div class="card p-6 md:p-8 h-full flex flex-col items-center text-center hover:shadow-glow-primary transition-all duration-300">
  <img src={profile.avatar_url} alt="GitHub Avatar" class="w-24 h-24 md:w-32 md:h-32 rounded-full border-4 border-matrix-green shadow-lg mb-4 md:mb-6">
  <h3 class="text-2xl md:text-3xl font-bold text-matrix-green text-glow mb-2">{profile.name}</h3>
  <p class="text-light-gray text-base md:text-lg mb-4 leading-relaxed">{profile.bio}</p>
  <div class="flex justify-center items-center text-light-gray text-xs md:text-sm mb-4 md:mb-6 space-x-4 flex-wrap">
    {profile.location && (
      <span class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-matrix-green" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.05 4.05A7 7 0 1114.95 14.95L10 20l-4.95-4.95A7 7 0 015.05 4.05zM10 12a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
        </svg>
        {profile.location}
      </span>
    )}
    <span class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-matrix-green" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.972 5.972 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
      </svg>
      {profile.followers} Followers
    </span>
  </div>
  <a href={profile.html_url} target="_blank" rel="noopener noreferrer" class="glassy-button mt-auto text-base md:text-lg px-6 py-2">
    View GitHub Profile
  </a>
</div>
